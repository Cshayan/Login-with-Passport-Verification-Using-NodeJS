<div class="row mt-5 mb-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body text-center">
            <h1><i class="fa fa-bolt" aria-hidden="true"></i> Login</h1><br>
            <% include ./partials/messages %>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email"><i class="fa fa-envelope" aria-hidden="true"></i> Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter email..." required />
                </div>
                <div class="form-group">
                    <label for="password"><i class="fa fa-lock" aria-hidden="true"></i> Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter password..." />
                </div>
                <button type="submit" class="btn btn-warning btn-block"><i class="fa fa-sign-in" aria-hidden="true"></i>
                    LOGIN</button>
            </form>
            <p class="lead mt-4">Don't have an account?<a href="/users/register"> Register Here!</a></p>
        </div>
    </div>
</div>